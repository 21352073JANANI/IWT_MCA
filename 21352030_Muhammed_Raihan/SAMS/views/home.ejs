<html lang="en">

<head>
  <title>Assignment by Raihan</title>
  <link rel="stylesheet" type="text/css" href="./style.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
  <meta charset="UTF-8" />
  <script src="./particles.js"></script>
  <script src="./script.js"></script>
</head>

<body>
  <div><br>
    <div>
      <h1>Student Management System</h1>
    </div>
    <div id="navbar">
      <a href="/register"><button class="navbtn" id="register">
          <i class="fa fa-plus"></i>&nbsp; Register
        </button></a>
      <a href="/search"><button class="navbtn" id="searchbtn">
          <i class="fa fa-search"></i>&nbsp; Search
        </button></a>
      <a href="/attendance"><button class="navbtn" id="attendance">
          <i class="fa fa-calendar"></i>&nbsp; Attendance
        </button></a>
    </div>
  </div>
  <br /><br />
  <div id="particles-js"></div>
  <form>
    <table id="mainTable" name="mainTable">
      <thead>
        <th scope="col">Sl.No</th>
        <th scope="col">Name</th>
        <th scope="col">Register No</th>
        <th scope="col">Institution Mail</th>
        <th scope="col">Personal Mail</th>
        <th scope="col">Phone No</th>
        <% if(data.length){ for(var i=0; i< data.length; i++) {%>
          <tr>
            <th scope="row">
              <%= (i+1) %>
            </th>
            <td>
              <%- data[i].name%>
            </td>
            <td>
              <%- data[i].reg_no%>
            </td>
            <td>
              <%- data[i].institution_mail%>
            </td>
            <td>
              <%- data[i].personal_mail%>
            </td>
            <td>
              <%- data[i].phone%>
            </td>
          </tr>
      </thead>
      <% } }else{ %>
        <tr>
          <td>The database is empty</td>
        </tr>
        <% } %>
    </table>
  </form>
</body>

</html>